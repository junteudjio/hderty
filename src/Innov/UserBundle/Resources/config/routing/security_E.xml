<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fos_etudiant_security_login" pattern="/loginE">
        <default key="_controller">InnovUserBundle:Security:login</default>
    </route>

    <route id="fos_etudiant_security_check" pattern="/login_checkE">
        <default key="_controller">InnovUserBundle:Security:check</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="fos_etudiant_security_logout" pattern="/logout">
        <default key="_controller">InnovUserBundle:Security:logoutE</default>
    </route>

</routes>   
