 {% for groupe in groupes %}
<aside class="profile-nav alt green-border">
                          <section class="panel">
                             <div class="user-heading alt green-bg">                                 
                                  <h1>{{ groupe.nom }}</h1>
                                  <p>{{groupe.membres[0]}}</p>
                                  <span><a style="border:none;position:absolute;right:20px;font-weight:bold;" href="{{ path('InnovGroup_demandeRejoindreGroupe', {'id':groupe.id }) }}"> {{ 'innov.content.vouloirRejoindreGroupe'|trans }} </a></span>
                              </div>

                              <ul class="nav nav-pills nav-stacked">
                                  <li><a href="{{ path('InnovGroup_voirMembres', {'id': groupe.id}) }} "> <i class="icon-time"></i> {{ 'innov.content.voirMembresGroupe'|trans }}  <span class="label label-primary pull-right r-activity">{{ 'innov.content.nombreDeMembres'|transchoice(groupe.membres|length) }}</span></a></li>
                                   {% set nbre_docs = groupe.examCollections|length %}
                                    {% for examCo in groupe.examCollections %}
                                        {% set nbre_docs = nbre_docs + examCo.essaisCollections|length %}
                                     {% endfor %}
                                  <li><a href="{{ path('innovGroup_consulterDocGroupe', {'id': groupe.id}) }}"> <i class="icon-calendar"></i>{{ 'innov.content.voirDocumentsGroupe'|trans }} <span class="label label-info pull-right r-activity">{{ 'innov.content.nombreDeDocumentsPartages'|transchoice(nbre_docs) }}</span></a></li>
                                  
                              </ul>

                          </section>
                      </aside>
{% endfor %}



